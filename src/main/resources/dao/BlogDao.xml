<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.myblog.dao.BlogDao">
    <select id="findBlogById" resultType="com.example.myblog.bean.Blog">
        SELECT * FROM blog WHERE id = #{id}
    </select>
    <select id="findBlogsByUserName" resultType="com.example.myblog.bean.Blog">
        select blog.id,blog.title,blog.content,blog.created_time,blog.user_id from blog
    inner join user on blog.user_id = user.id where user.name = #{username}

    </select>
</mapper>